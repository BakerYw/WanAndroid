<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="@android:color/white">
    <TextView
        android:id="@+id/common_tv_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="@dimen/title_bar_height"
        android:paddingEnd="@dimen/title_bar_height"
        android:textColor="@color/title_txt_color"
        android:textSize="@dimen/title_txt_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/common_iv_back"
        android:layout_width="@dimen/back_img_size"
        android:layout_height="@dimen/back_img_size"
        android:contentDescription="@string/back"
        android:paddingLeft="19dp"
        android:paddingTop="16dp"
        android:paddingRight="19dp"
        android:paddingBottom="16dp"
        android:src="@mipmap/back" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>